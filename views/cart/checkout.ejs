<% include ./../layouts/_header %>

<script src="js/checkout.js"></script>

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <form action="/checkout" method="POST" id="formPayment">
          <input type="hidden" name="_csrf" value="<%= csrf %>">
          <legend>
            Amount to Pay: $<strong><%= cart.totalPrice %></strong>
          </legend>
          <div class="alert alert-danger hidden" id="payment-errors">
            {{errMsg}}
          </div>
          <div class="form-group">
            <label>Name on Card</label>
            <input type="text" class="form-control" data-stripe="name"
            size="20" required>
          </div>
          <div class="form-group">
            <label>Card Number</label>
            <input type="text" class="form-control" data-stripe="number"
            size="20" required>
            <p class="text-warning">sample card #: 4242424242424242</p>
          </div>
          <div class="row">
            <div class="col-xs-8">
              <div class="form-group">
                <label>Expiration (MM/YY)</label>
                <div class="row">
                  <div class="col-xs-6">
                    <input type="text" class="form-control" data-stripe="exp_month"
                    placeholder="MM" maxlength="2" size="2" required>
                  </div>
                  <div class="col-xs-6">
                    <input type="number" class="form-control" data-stripe="exp_year"
                    placeholder="YY" maxlength="2" size="2" required>
                  </div>
                </div>
              </div>
              <p class="text-warning">any value in the future is valid</p>
            </div>
            <div class="col-xs-4">
              <div class="form-group">
                <label>CVC</label>
                <input type="text" class="form-control" data-stripe="cvc"
                 placeholder="CVC" maxlength="3" size="3" required>
              </div>
              <p class="text-warning">any three number</p>
            </div>
          </div>
          <div class="form-group">
            <label>Address Line #1</label>
            <input type="text" class="form-control" data-stripe="address_line1"
            required>
          </div>
          <div class="form-group">
            <label>Address Line #2</label>
            <input type="text" class="form-control" data-stripe="address_line2"
            required>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <label>City</label>
                <input type="text" class="form-control" data-stripe="address_city"
                required>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label>Country</label>
                <input type="text" class="form-control" data-stripe="country"
                required>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <label>ZIP Code</label>
                <input type="text" class="form-control" data-stripe="address_zip"
                maxlength="6" size="6" required>
              </div>
            </div>
          </div>
          <input type="submit" class="btn btn-success btn-block" id="btnSubmit"
          value="Submit Payment">
        </form>
      </div>
    </div>
  </div>

<script src="js/checkout.js"></script>
<% include ./../layouts/_footer %>
