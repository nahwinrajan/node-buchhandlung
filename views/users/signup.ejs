<% include ./../layouts/_header %>

<!-- UX dictate that toggling mask on password gave much better experience and confidence for user -->
<script type="text/javascript">
  function togglePasswordMask(event) {
    let txtpw     = document.querySelector('#password');
    let cbUnmask  = document.querySelector('#checkbox-unmask-pw');

    txtpw.type = cbUnmask.checked ?  'text' : 'password';
  }
</script>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1 class="text-center">
        Welcome to Buchhandlung
      </h1>
      <hr>
      <div class="panel">
        <div class="panel-body">
          <form action="/users/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="form-group">
              <label for="username">Full Name</label>
              <input type="text" autofocus placeholder="Full Name"
                name="name" id="username" class="form-control">
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" autofocus placeholder="Email Address"
                name="email" id="email" class="form-control">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" placeholder="Password"
                name="password" id="password" class="form-control">
              <input type="checkbox" id="checkbox-unmask-pw"
              onchange="togglePasswordMask()">
              <label for="checkbox-unmask-pw">Show Password</label>
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block" type="submit"
                data-disable-with="<i class='fa fa-spinner fa-spin'></i>
                registering...">Register
              </button>
            </div>
          </form>
          <div class="text-center">
            <p class="text-muted">
              Already have an account ?
              <a href="/users/signin" class="text-success">Sign In</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ./../layouts/_footer %>
