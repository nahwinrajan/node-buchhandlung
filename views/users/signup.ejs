<% include ./../layouts/_header %>

<!-- UX dictate that toggling mask on password gave much better experience and confidence for user -->
<script src="/js/showpassword.js"></script>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1 class="text-center">
        Welcome to Buchhandlung
      </h1>
      <hr>
      <div class="panel">
        <div class="panel-body">
          <form action="/users/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrf %>">
            <div class="form-group">
              <label for="username">Full Name</label>
              <input type="text" class="form-control" id="username" name="name"
              placeholder="Full Name" autofocus required>
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" class="form-control" id="email" name="email"
              placeholder="Email Address" required>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password"
              name="password" placeholder="Password"
              title="password must be at least 6 characters long of alphanumeric"
              pattern="[A-Za-z0-9]{6,}" required>
              <input type="checkbox" id="checkbox-unmask-pw"
              onchange="togglePasswordMask()" style="margin-top: 20px;padding: 10px 20px;">
              <label for="checkbox-unmask-pw">Show Password</label>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success btn-block"
                data-disable-with="<i class='fa fa-spinner fa-spin'></i>
                registering...">Register
              </button>
            </div>
          </form>
          <div class="text-center">
            <p>
              Already have an account ?
              <a class="text-success" href="/users/signin">Sign In</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ./../layouts/_footer %>
