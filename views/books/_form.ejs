<div class="form-group">
  <label for="title">Title</label>
  <input type="text" name="book[title]" id="title"
   class="form-control" placeholder="book's title" value="<%= if (book) { book.title } %>">
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea class="form-control" name="book[description]"
  rows="5" id="description"><%= if (book) { book.description } %></textarea>
  <span class="help-block">compelling description of the book for prospective buyer</span>
</div>
<div class="form-group">
  <label for="pageCount">Page Count</label>
  <input type="number" name="book[pages]" id="pageCount" min="1" step="1"
  class="form-control" placeholder="book's page count" value="<%= if (book) { book.pages } %>">
</div>
<div class="form-group">
  <label for="rating">Rating</label>
  <input type="number" incre name="book[rating]" id="rating" class="form-control"
  placeholder="book's rating" value="<%= if (book) { book.rating } %>" min="0" step="0.5" max="5">
</div>
<div class="form-group">
  <label for="publishDate">publishDate</label>
  <input type="date" name="book[publishDate]" id="publishDate"
   class="form-control" placeholder="book's publish date" value="<%= if (book) { book.publishDate } %>">
</div>
<div class="form-group">
  <label for="price">Price</label>
  <input type="number" name="book[price]" id="price"  class="form-control"
  placeholder="sell price" value="<%= if (book) { book.price } %>" min="0" step="0.01">
</div>
<div class="form-group">
  <label for="author">Author Name</label>
  <input type="text" name="book[author]" id="author"  class="form-control"
  placeholder="book's author name" value="<%= if (book) { book.author } %>">
</div>
<div class="form-group">
  <label for="publisher">Publisher</label>
  <input type="text" name="book[publisher]" id="publisher" class="form-control"
  placeholder="publisher name" value="<%= if (book) { book.publisher } %>">
</div>
<div class="row">
  <div class="col-sm-6">
    <a href="/" class="btn btn-block btn-warning">
      Back
    </a>
  </div>
  <div class="col-sm-6">
    <button class="btn btn-block btn-success">
      Update !!
    </button>
  </div>
</div>
