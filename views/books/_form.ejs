<div class="form-group">
  <label for="title">Title</label>
  <input type="text" class="form-control" id="title" name="book[title]"
    value="<%= if (book) { book.title } %>" placeholder="book's title" >
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea class="form-control" name="book[description]"
  rows="5" id="description">
    <%= if (book) { book.description } %>
  </textarea>
  <span class="help-block">
    compelling description of the book for prospective buyer
  </span>
</div>
<div class="form-group">
  <label for="pageCount">Page Count</label>
  <input type="number" class="form-control" id="pageCount" name="book[pages]"
    min="1" step="1" value="<%= if (book) { book.pages } %>"
    placeholder="book's page count" >
</div>
<div class="form-group">
  <label for="rating">Rating</label>
  <input type="number" class="form-control" id="rating" name="book[rating]"
  value="<%= if (book) { book.rating } %>" placeholder="book's rating" min="0"
  step="0.5" max="5">
</div>
<div class="form-group">
  <label for="publishDate">publishDate</label>
  <input type="date" class="form-control" id="publishDate" name="book[publishDate]"
  value="<%= if (book) { book.publishDate } %>" placeholder="book's publish date">
</div>
<div class="form-group">
  <label for="price">Price</label>
  <input type="number" class="form-control" id="price"  name="book[price]"
  value="<%= if (book) { book.price } %>" placeholder="sell price" min="0"
  step="0.01">
</div>
<div class="form-group">
  <label for="author">Author Name</label>
  <input type="text" class="form-control" id="author" name="book[author]"
  value="<%= if (book) { book.author } %>" placeholder="book's author name">
</div>
<div class="form-group">
  <label for="publisher">Publisher</label>
  <input type="text" class="form-control" id="publisher" name="book[publisher]"
  value="<%= if (book) { book.publisher } %>" placeholder="publisher name">
</div>
<div class="row">
  <div class="col-sm-6">
    <a class="btn btn-block btn-warning" href="/">Back</a>
  </div>
  <div class="col-sm-6">
    <button class="btn btn-block btn-success">Update !!</button>
  </div>
</div>
