<% include ./../layouts/_header %>

<div class="container">
  <div class="jumbotron">
    <h1 class="page-header">
      <i class="fa fa-fire" aria-hidden="true"></i> buchhandlung
    </h1>
    <h3>some promotion stuff goes here</h3>
  </div>
</div>

<div class="container">
  <% if(books && books.length > 0) {%>
    <div class="row">
      <% for(let i=0; i < books.length; i++) { %>
        <% if (i !== 0 && i % 4 === 0) { %>
          </div>
          <div class="row">
        <% } %>
          <div class="col-sm-3">
            <img class="img-full-width"
            src="<%= (books[i].coverImage) ? books[i].coverImage : '/images/default.png' %>"
            alt="">
            <div class="container-fluid no-padding">
              <div class="row">
                <div class="col-sm-12">
                  <h3><%= books[i].title %></h3>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <p class="subtitle"><%= books[i].descriptionShort() %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                  <a class="btn btn-success btn-block" name="btn-add-to-cart"
                  data-id="<%= books[i].id%>"
                  href="/addtocart/<%= books[i].id%>?origin=/books">
                    <i class="fa fa-cart-plus" aria-hidden="true"></i><%= books[i].price %>
                  </a>
                </div>
                <div class="col-sm-6">
                  <a class="btn btn-info btn-block" href="/books/<%= books[i].id%>"> more...</a>
                </div>
              </div>
            </div>
          </div>
      <% } %>
    </div>
  <% } else { %>
    <h1 class="text-info">Oopps...</h1>
    <h4>
      it seems we are under maintenance for the moment
    </h4>
  <% } %>
</div>

<% include ./../layouts/_footer %>
