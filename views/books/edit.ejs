<% include ./../layouts/_header %>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="well">
        <p>
          In real world app, this page must be within the CMS / Admin panel.
          It here for demonstrating CRUD and RESTful routes
        </p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h2 class="text-center">Update - <%= book.title %></h2>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="container-fluid">
        <form action="/books/<%= book.id %>?_method=PUT" method="POST"
          enctype="multipart/form-data">
          <input type="hidden" name="_csrf" value="<%= csrf %>">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="book[title]"
            value="<%= book.title %>" placeholder="book's title" required>
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" id="description"
            name="book[description]" rows="5" required>
              <%= book.description %>
            </textarea>
            <span class="help-block">compelling description of the book for prospective buyer</span>
          </div>
          <div class="form-group">
            <label for="pageCount">Page Count</label>
            <input type="number" class="form-control" id="pageCount"
            name="book[pages]" value="<%= book.pages %>"
            placeholder="book's page count" min="1" step="1" required>
          </div>
          <div class="form-group">
            <label for="authors">Author(s)</label>
            <input type="text" class="form-control" id="authors" name="book[authors]"
             value="<%= book.authors.join(',') %>"
             placeholder="book's author(s), separate the author by ','" required>
          </div>
          <div class="form-group">
            <label for="publisher">Publisher</label>
            <input type="text" class="form-control" id="publisher" name="book[publisher]"
            value="<%= book.publisher %>" placeholder="book's publisher" required>
          </div>
          <div class="form-group">
            <label for="publishDate">Publish Date</label>
            <input type="date" class="form-control" id="publishDate"
            name="book[publishDate]" value="<%= book.publishDateShort() %>"
            placeholder="book's publish date">
          </div>
          <div class="form-group">
            <label for="isbn">ISBN</label>
            <input type="number" class="form-control" id="rating"
            name="book[isbn]" value="<%= book.isbn %>"
            placeholder="book's ISBN code" min="1000000000000"
            max="9999999999999" required>
          </div>
          <div class="form-group">
            <label for="rating">Rating</label>
            <input type="number" class="form-control" id="rating" name="book[rating]"
            value="<%= book.rating %>" placeholder="book's rating" min="0"
            step="0.5" max="5">
          </div>
          <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" name="book[price]"
            value="<%= book.price %>" placeholder="sell price" min="0" step="0.01"
            required>
          </div>
          <div class="form-group">
            <label for="coverImage">Cover Image</label>
            <input type="file" class="form-control" id="file"
            name="file" accept="image/*">
          </div>
          <div class="row">
            <div class="col-sm-6">
              <a class="btn btn-block btn-warning" href="/">
                Back
              </a>
            </div>
            <div class="col-sm-6">
              <button class="btn btn-block btn-success">
                Update!!
              </button>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<% include ./../layouts/_footer %>
